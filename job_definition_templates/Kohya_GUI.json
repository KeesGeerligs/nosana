{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "kohya-ss-webservice",
      "args": {
        "image": "nosana/kohya_ss:1.0.0",
        "cmd": ["python3", "kohya_gui.py", "--listen", "0.0.0.0", "--server_port", "7860", "--headless"],
        "gpu": true,
        "expose": 7860,
        "env": {
          "NVIDIA_VISIBLE_DEVICES": "all",
          "NVIDIA_DRIVER_CAPABILITIES": "compute,utility"
        }
      }
    }
  ]
}
