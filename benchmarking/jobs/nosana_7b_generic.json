{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "ollama",
      "args": {
        "cmd": [
            "-c 'curl -s https://raw.githubusercontent.com/KeesGeerligs/nosana/main/benchmarking/images/start_benchmark.sh -o /tmp/start_benchmark.sh && chmod +x /tmp/start_benchmark.sh && /tmp/start_benchmark.sh 120 10'"
          ],
        "image": "docker.io/nosana/ollama-7b:0.0.1",
        "gpu": true,
        "expose": 11434
      },
      "results": {
        "gemma_results": "(?<=Results for gemma:7b: ).*",
        "phi3_results": "(?<=Results for phi3: ).*",
        "mistral_results": "(?<=Results for mistral: ).*",
        "llama3_results": "(?<=Results for llama3: ).*",
        "qwen_results": "(?<=Results for qwen:7b: ).*",
        "system_specs": "(?<=system specs: ).*"
      }
    }
  ]
}
