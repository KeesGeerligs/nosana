{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "VLLM",
      "args": {
        "cmd": [
          "timeout",
          "10m",
          "python3",
          "-m",
