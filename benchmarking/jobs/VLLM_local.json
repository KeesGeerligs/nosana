        "entrypoint": "timeout",
        "image": "vllm/vllm-openai:latest",
        "gpu": true,
        "expose": 8000,
        "env": {
          "HUGGING_FACE_HUB_TOKEN": "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"
        }
      }
    }
