{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "Ollama",
      "args": {
        "cmd": [
          "-c ",
          "ollama serve > /dev/null 2>&1 & sleep 1;",
          "ollama pull x > /dev/null 2>&1;",
          "serve_pid=$!; sleep 5400; kill $serve_pid"
        ],
        "entrypoint": "/bin/sh",
        "image": "docker.io/ollama/ollama",
        "gpu": true,
        "expose": 11434,
        "env": {
          "OLLAMA_NUM_PARALLEL": "5"
        }
      }
    }
  ]
}