{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "benchmark"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "bench-SD-comfy",
      "args": {
        "cmd": [
          "/bin/sh", "-c", 
          "echo \"Starting benchmarking service...\"; python -u main.py --listen --port 7860 --gpu-only"
        ],
        "image": "docker.io/nosana/sd-comfy-bench:0.2.1",
        "gpu": true,
        "expose": 7860,
        "resources": [
          {
            "type": "S3",
            "url": "https://models.nosana.io/stable-diffusion/1.5",
            "target": "/comfyui/models/checkpoints"
          }
        ]
      }
    }
  ]
}
